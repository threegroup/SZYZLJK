<?xml version="1.0" encoding="utf-8"?>
<Items:SchemeCommonItem xmlns:fx="http://ns.adobe.com/mxml/2009" 
						xmlns:s="library://ns.adobe.com/flex/spark" 
						xmlns:mx="library://ns.adobe.com/flex/mx" 
						xmlns:Items="widgets.wateremergency.model.components.Items.*" >
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:HGroup width="100%" height="100%" horizontalAlign="left" verticalAlign="middle">
		<s:Label text="{schemeTitle}" width="60"/>
		<mx:DateField id="startDate" width="100%" 
					  text="{schemeText}"
					  dayNames="{dayNamesArray}"
					  monthNames="{monthNamesArray}" 
					  formatString="{formatString}" 
					  yearNavigationEnabled="true"
					  maxYear="2100" minYear="1900" 
					  dateChooserStyleName="dateFieldPopup" 
					  buttonMode="true" rollOverColor="#b1d1ea"
					  selectionColor="#b1d1ea" locale="zh-CN" editable="true">
		</mx:DateField>
	</s:HGroup>
</Items:SchemeCommonItem>

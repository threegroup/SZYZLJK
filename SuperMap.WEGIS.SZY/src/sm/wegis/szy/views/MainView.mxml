<?xml version="1.0" encoding="utf-8"?>
<baseclass:ViewBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" 
					xmlns:baseclass="sm.wegis.szy.core.baseclass.*"
					width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import mx.core.IVisualElement;
			/**Top*/
			public function addTopView(component:IVisualElement):void
			{
				this.addComponent(this.TopContainer, component);
			}
			
			/**Body*/
			public function addBodyView(component:IVisualElement):void
			{
				this.addComponent(this.BodyContainer, component);
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Group width="100%"  height="100%">
		<s:VGroup x="0" y="0" width="100%" height="100%" gap="0">
			<s:Group id="TopContainerGroup" width="100%" height="110">
				<s:BorderContainer id="TopContainer" 
								   width="100%" 
								   height="100%"/>	
			</s:Group>
			<s:Group id="BodyContainerGroup" width="100%" height="100%">
				<s:BorderContainer id="BodyContainer"
								   width="100%"
								   height="100%">
				</s:BorderContainer>
			</s:Group>
		</s:VGroup>
	</s:Group>
</baseclass:ViewBase>

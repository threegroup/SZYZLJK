<!--- The default skin class for the Spark Button component.  

       @see spark.components.Button
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<!--修改后菜单按钮-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             minWidth="21" minHeight="21" width="100%" height="100%"
             alpha.disabled="0.5">
     
	<fx:Metadata>[HostComponent("com.supermap.wegis.common.components.menuBar.MenuItem")]</fx:Metadata>
    <fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number) : void
			{
				var borderColor:uint = getStyle("borderColor");
				if(!isNaN(borderColor))
				{
					borderStroke.color = borderColor;
				}else{
					borderStroke.color = 0x85b3d8;
				}
			
				super.updateDisplayList(unscaledWidth, unscaledHeight);
			}
		
		]]>
	</fx:Script>
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
		<s:State name="keepSelected" />
    </s:states>
	
	<!-- layer 2: fill -->
	<!--
	<s:LinearGradient rotation="90">
	<s:GradientEntry color.keepSelected="0x92EFF9" 
	alpha="0.0" />
	<s:GradientEntry color.keepSelected="0x3FAEFF" 
	alpha="1" />
	</s:LinearGradient>
	-->
	<!--- @private -->
	<s:Rect id="fill" left="0" right="0" top="0" bottom="0" radiusX="0" alpha.keepSelected="1" alpha.over="0.5" alpha="0">
		<s:fill>
			<s:SolidColor color.keepSelected="#3385FF" color.over="#3385FF" color="#FFFFFF"/>
		</s:fill>
	</s:Rect>
	
	<!-- layer 7: border - put on top of the fill so it doesn't disappear when scale is less than 1 -->
	<!--- @private -->
	<s:Rect id="border" left="0" right="0" top="0" bottom="0" width="80" height="80" radiusX="0" alpha="0">
		<s:stroke>
			<s:SolidColorStroke id="borderStroke"/>
		</s:stroke>
	</s:Rect>
    
	<!-- layer 8: text -->
	<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay  -->
	<s:Label id="labelDisplay"
			 textAlign="center"
			 maxDisplayedLines="1"
			 horizontalCenter="0" 
			 verticalCenter="1" 
			 verticalAlign="middle"
			 left="0" right="0" 
			 top="0" bottom="0"
			 color.over="#FFFFFF"
			 color.down="#FFFFFF"
			 color.keepSelected="#FFFFFF"
			 color="#000000"
			 showTruncationTip="false">
	</s:Label>
    
</s:SparkButtonSkin>

<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fc="http://ns.adobe.com/flashcatalyst/2009"
		minWidth="120" maxHeight="12">
	
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata> 
	
	<s:states>
		<s:State name="over"/>
		<s:State name="up" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	
	<!-- background -->
	<s:Rect left="0" right="0" top="0" bottom="0" radiusX="1" radiusY="1" >
		<s:stroke>
			<s:SolidColorStroke  color="#959695" />
		</s:stroke>
		<s:fill>
			<s:LinearGradient rotation="90" >
				<s:GradientEntry color="#dfedf8" ratio="0.5" alpha="0.5"/>
				<s:GradientEntry color="#b1d1ea" ratio="0.5" alpha="0.5"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<!-- Gripper -->
	<s:Group verticalCenter="0" horizontalCenter="-1"  >
		<s:Line yFrom="0" yTo="6" xFrom="1" xTo="1">
			<s:stroke>
				<s:SolidColorStroke color="#787777" pixelHinting="true" />
			</s:stroke>
		</s:Line>
		<s:Line yFrom="0" yTo="6" xFrom="4" xTo="4">
			<s:stroke>
				<s:SolidColorStroke color="#787777" pixelHinting="true" />
			</s:stroke>
		</s:Line>
		<s:Line yFrom="0" yTo="6" xFrom="7" xTo="7">
			<s:stroke>
				<s:SolidColorStroke color="#787777" pixelHinting="true" />
			</s:stroke>
		</s:Line>
	</s:Group>
	
	<!-- shadow line -->
	<!--<s:Line alpha="0.38" left="1" right="1" bottom="-1">
		<s:stroke>
			<s:SolidColorStroke color="#5C5C5C" weight="1" caps="square"/>
		</s:stroke>
	</s:Line>-->
	
</s:Skin>

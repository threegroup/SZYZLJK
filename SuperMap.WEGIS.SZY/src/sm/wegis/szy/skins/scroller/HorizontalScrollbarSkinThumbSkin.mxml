<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fc="http://ns.adobe.com/flashcatalyst/2009"
		minWidth="120" minHeight="12" >
	
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata> 
	
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	
	<!-- background -->
	<s:Rect left="0" right="0" top="0" bottom="0" radiusX="1" radiusY="1">
		<s:stroke>
			<s:SolidColorStroke color.disabled="#ABABAB"
								color.down="#959695"
								color.over="#959695"
								color.up="#959695"/>
		</s:stroke>
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color.up="#F1F1F2" color.down="#DCF0FB" color.over="#DCF0FB"  ratio="0.3"/>
				<s:GradientEntry color.up="#D9DADC" color.down="#A4D5EF" color.over="#A4D5EF"  ratio="0.3"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<!-- Gripper -->
	<s:Group horizontalCenter="-1" verticalCenter="0">
		<s:Line xFrom="1" xTo="1" yFrom="0" yTo="6">
			<s:stroke>
				<s:SolidColorStroke color="#787777" pixelHinting="true"/>
			</s:stroke>
		</s:Line>
		<s:Line xFrom="4" xTo="4" yFrom="0" yTo="6">
			<s:stroke>
				<s:SolidColorStroke color="#787777" pixelHinting="true"/>
			</s:stroke>
		</s:Line>
		<s:Line xFrom="7" xTo="7" yFrom="0" yTo="6">
			<s:stroke>
				<s:SolidColorStroke color="#787777" pixelHinting="true"/>
			</s:stroke>
		</s:Line>
	</s:Group>
</s:Skin>

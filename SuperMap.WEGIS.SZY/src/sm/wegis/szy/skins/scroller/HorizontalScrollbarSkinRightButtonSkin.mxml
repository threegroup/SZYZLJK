<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fc="http://ns.adobe.com/flashcatalyst/2009"
		width="15" height="10" >
	
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata> 
	
	<s:states>
		<s:State name="up" />
		<s:State name="over"/>
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- background -->
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:stroke>
			<s:SolidColorStroke color="#666666"
								color.disabled="#ABABAB"
								color.over="#777777"
								color.up="#ABABAB"/>
		</s:stroke>
		<s:fill>
			<s:SolidColor color.disabled="#CCCCCC"
						  color.down="#F0F0F0"
						  color.over="#FFFFFF"
						  color.up="#FFFFFF"/>
		</s:fill>
	</s:Rect>
	
	<!-- shadow (down state only) -->
	
	<!-- arrow -->
	<s:Path width="7" height="5" data="M 0 4 L 7  7.5   7 0  Z" horizontalCenter="-0.5"
			horizontalCenter.disabled="0"
			horizontalCenter.down="-0.5"
			horizontalCenter.over="0"
			horizontalCenter.up="0">
		<s:fill>
			<s:SolidColor color="#666666"
						  color.disabled="#777777"
						  color.over="#777777"
						  color.up="#777777"/>
		</s:fill>
	</s:Path>
	
</s:Skin>

<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fc="http://ns.adobe.com/flashcatalyst/2009"
		minWidth="12" maxHeight="40">
	
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata> 
	
	<s:states>
		<s:State name="up" />
		<s:State name="over"/>
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- background -->
	<s:Rect id="fill" left="0" right="0" top="0" bottom="0" radiusX="0">
		<s:fill>
			<s:SolidColor color="#BCBCBC"/>
		</s:fill>
	</s:Rect>
	<!-- Gripper -->
	<s:VGroup left="0" right="0" top="0" bottom="0" gap="3"
			  horizontalAlign="center" verticalAlign="middle"
			  paddingLeft="2" paddingRight="2">
		<s:Line width="100%">
			<s:stroke>
				<s:SolidColorStroke color="#FFFFFF" weight="1"/>
			</s:stroke>
		</s:Line>
		<s:Line width="100%">
			<s:stroke>
				<s:SolidColorStroke color="#FFFFFF" weight="1"/>
			</s:stroke>
		</s:Line>
		<s:Line width="100%">
			<s:stroke>
				<s:SolidColorStroke color="#FFFFFF" weight="1"/>
			</s:stroke>
		</s:Line>
	</s:VGroup>
</s:Skin>

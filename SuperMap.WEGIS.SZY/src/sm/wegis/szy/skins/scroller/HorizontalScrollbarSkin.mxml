<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fc="http://ns.adobe.com/flashcatalyst/2009"
		maxWidth="16"   height="16">
	
	<fx:Metadata>
		[HostComponent("spark.components.HScrollBar")]
	</fx:Metadata> 
	
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
		<s:State name="inactive" />
	</s:states>
	
	<s:Button id="track" x="0" left="0" 
			   right="0" verticalCenter="0" focusEnabled="false"
			  skinClass="sm.wegis.szy.skins.scroller.HorizontalScrollbarSkinTrackSkin"
			  alpha.disabled="0.5"
			  alpha.inactive="0.5"/>

	<s:Button id="thumb" x="0" y="0" verticalCenter="0" focusEnabled="false" 
			  skinClass="sm.wegis.szy.skins.scroller.HorizontalScrollbarSkinThumbSkin" minWidth="20"
			  alpha.disabled="0.5"
			  alpha.inactive="0.5" 
			  visible.inactive="false"/>
	
</s:Skin>
